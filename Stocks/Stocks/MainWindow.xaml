<Window x:Class="Stocks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:Stocks.UserControls"
        xmlns:local="clr-namespace:Stocks"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="0">
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15">Stocks</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer>
                        <StackPanel Name="StockListContainer">
                            <userControls:ItemSelection x:Name="StockItemSel"></userControls:ItemSelection>
                        </StackPanel>
                    </ScrollViewer>
                    
                    
                </TabItem.Content>

            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15">Digital Currencies</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer>
                        <StackPanel Name="DCurrenciesListContainer">
                            <userControls:ItemSelection x:Name="DCurrenciesItemSel"></userControls:ItemSelection>
                        </StackPanel>
                    </ScrollViewer>


                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock FontSize="15">Currencies</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <ScrollViewer>
                        <StackPanel Name="CCurrencesListContainer">
                            <userControls:ItemSelection x:Name="CCurrenciesItemSel"></userControls:ItemSelection>
                        </StackPanel>
                    </ScrollViewer>


                </TabItem.Content>
            </TabItem>
        </TabControl>
        <ScrollViewer Grid.Column="1">
            <StackPanel Name ="DataContainer">
                <userControls:DataViewer></userControls:DataViewer>
                <userControls:DataViewer></userControls:DataViewer>
            </StackPanel>
           
        </ScrollViewer>
        
      
        
    </Grid>
</Window>
